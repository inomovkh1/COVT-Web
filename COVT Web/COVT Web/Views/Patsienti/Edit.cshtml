@model COVT_Web.Models.DB.PatsientiDb

<head>
    <h2>Редактирование пользователя</h2>
    <link rel="stylesheet" href="~/css/mystile.css" />
</head>
<body>
    <form asp-action="edit" asp-controller="Patsienti" asp-route-id="@Model.id_patsienta">
        <div>
            <label>Врач:</label>
            <select asp-for="id_vracha" asp-items="ViewBag.VrachiDB"></select>
        </div>

        <div>
            <input asp-for="familiya"  class="mytextbox" placeholder="ФИО"/>
            <span asp-validation-for="familiya" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="data_rozhdeniya"  class="mytextbox"/>
            <span asp-validation-for="data_rozhdeniya" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="nalichie_operatsii" class="mytextbox" placeholder="Наличие операции" />
            <span asp-validation-for="nalichie_operatsii" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="telefon" class="mytextbox" placeholder="Телефон" />
            <span asp-validation-for="telefon" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="adres" class="mytextbox" placeholder="Адрес" />
            <span asp-validation-for="adres" class="text-danger"></span>
        </div>

        <div>
            <input type="submit" value="Сохранить" class="button-like"/>
        </div>
    </form>
</body>