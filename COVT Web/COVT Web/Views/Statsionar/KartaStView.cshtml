@model COVT_Web.Models.ViewModel.KartaStView

<head>
    <link rel="stylesheet" href="~/css/mystile.css" />
</head>
<body>
    <form asp-action="KartaStView" asp-controller="Statsionar" asp-route-id="@Model.id_karti">

        <div>
            <label>Пациент: @Model.patsient</label>
        </div>

        <div>
            <label>Дата приёма: @Model.data_postupleniya</label>
        </div>

        <div>
            <label>Врач: @Model.vrach</label>
        </div>

        <div>
            <label>Болезнь: @Model.bolezn</label>
        </div>


        <div>
            <label>Жалобы:</label>
            <input asp-for="@Model.zhalobi" class="form-control" value="@Model.zhalobi" />
        </div>

        <div>
            <label>История заболевания:</label>
            <input asp-for="@Model.ist_zab" class="form-control" value="@Model.ist_zab" />
        </div>

        <div>
            <label>История жизни:</label>
            <input asp-for="@Model.ist_zhizni" class="form-control" value="@Model.ist_zhizni" />
        </div>

        <div>
            <label>Настоящий статус:</label>
            <input asp-for="@Model.nast_stat" class="form-control" value="@Model.nast_stat" />
        </div>

        <div>
            <label>Местный статус:</label>
            <input asp-for="@Model.mest_stat" class="form-control" value="@Model.mest_stat" />
        </div>

        <div>
            <label>Дополнительные методы обследования:</label>
            <input asp-for="@Model.dop_met_obsl" class="form-control" value="@Model.dop_met_obsl" />
        </div>

        <div>
            <label>Диагноз:</label>
            <input asp-for="@Model.diagnoz" class="form-control" value="@Model.diagnoz" />
        </div>

        <div>
            <label>План обследования:</label>
            <input asp-for="@Model.plan_obsl" class="form-control" value="@Model.plan_obsl" />
        </div>

        <div>
            <label>План лечения:</label>
            <input asp-for="@Model.plan_lech" class="form-control" value="@Model.plan_lech" />
        </div>

        <div>
            <label>Заключение:</label>
            <input asp-for="@Model.zakl" class="form-control" value="@Model.zakl" />
        </div>

        <div>
            <label>Наблюдение:</label>
            <input asp-for="@Model.nablyudenie" class="form-control" value="@Model.nablyudenie" />
        </div>

        <div>
            <label>Осмотр анастезиолога:</label>
            <input asp-for="@Model.osman" class="form-control" value="@Model.osman" />
        </div>

         <div>
            <label>Осмотр специалистов:</label>
            <input asp-for="@Model.osmspets" class="form-control" value="@Model.osmspets" />
        </div>

        <div>
            <label>Предоперационная подгатовка:</label>
            <input asp-for="@Model.predoper" class="form-control" value="@Model.predoper" />
        </div>

        <div>
            <label>Ход операции:</label>
            <input asp-for="@Model.khod_operat" class="form-control" value="@Model.khod_operat" />
        </div>

        <div>
            <label>Выписной эпикриз:</label>
            <input asp-for="@Model.vip_epikr" class="form-control" value="@Model.vip_epikr" />
        </div>

        <div>
            <label>Дата выписки: @Model.data_vipiski</label>
        </div>

        <div>
            <button type="submit" class="btn-dark">Сохранить</button>
        </div>
    </form>

    <h2>Информация о файлах:</h2>
    <table class="content-table">
        <thead>
            <tr>
                <th>Дата загрузки</th>
                <th>Описание</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in ViewBag.Files)
            {
                <tr>
                    <td>@file.date</td>
                    <td>@file.opisanie</td>
                    <td>
                        <a asp-action="OpenFile" asp-controller="Files" asp-route-id="@file.id_file">Смотреть</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>