@model COVT_Web.Models.DB.BolezniDb
<head>
    <link rel="stylesheet" href="~/css/mystile.css" />
</head>
<body>
    <form asp-action="Create" asp-controller="Bolezni" method="post">
        <div>
            <label>Название:</label>
            <input asp-for="nazvanie" class="form-control" id="nazvanie" />
        </div>

        <div>
            <label>Жалобы:</label>
            <input asp-for="zhalobi" class="form-control" id="zhalobi" />
        </div>

        <div>
            <label>История заболевания:</label>
            <input asp-for="ist_zab" class="form-control" id="ist_zab" />
        </div>

        <div>
            <label>Настоящий статус:</label>
            <input asp-for="nast_stat" class="form-control" id="nast_stat" />
        </div>

        <div>
            <label>Местный статус:</label>
            <input asp-for="mest_stat" class="form-control" id="mest_stat" />
        </div>

        <div>
            <label>Дополнительные методы обследования:</label>
            <input asp-for="dop_met_obsl" class="form-control" id="dmo" />
        </div>

        <div>
            <label>Диагноз:</label>
            <input asp-for="diagnoz" class="form-control" id="diagnoz" />
        </div>

        <div>
            <label>План обследования:</label>
            <input asp-for="plan_obsl" class="form-control" id="plan_obsl" />
        </div>

        <div>
            <label>План лечения:</label>
            <input asp-for="plan_lech" class="form-control" id="plan_lech" />
        </div>

        <div>
            <label>Заключение:</label>
            <input asp-for="zakl" class="form-control" id="zakl" />
        </div>

        <div>
            <button type="submit" class="btn-dark">Добавить болезнь</button>
        </div>
    </form>
</body>